<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_article_list__flArticleList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".ui.articleList.ArticleListFragment">

    <TextView
        style="@style/TextViewPartStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/most_interested" />

    <include
        android:id="@+id/fragment_article_list__include_main_recycler"
        layout="@layout/view_recycler" />

    <TextView
        style="@style/TextViewPartStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes" />

    <include
        android:id="@+id/fragment_article_list__include_article_recycle"
        layout="@layout/view_recycler" />

</LinearLayout>